<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="klipper_security_oauth.oauth.authentication.provider"
                 class="Klipper\Component\SecurityOauth\Authentication\Provider\OauthProvider">
            <argument type="collection"/>
            <argument type="service" id="klipper_security_oauth.resource_server" />
            <argument type="collection"/>
        </service>

        <service id="klipper_security_oauth.oauth.authentication.listener"
                 class="Klipper\Component\SecurityOauth\Firewall\OauthListener">
            <argument type="service" id="security.token_storage" />
            <argument type="service" id="security.authentication.manager" />
            <argument type="collection"/>
            <argument type="collection"/>
        </service>

    </services>
</container>
